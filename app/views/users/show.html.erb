<h1><%= @user.name %></h1>

<%= image_tag @user.avatar.url(:thumb) %>

<nav class="navbar navbar-fixed-buttom" role="navigation">
  <%= link_to "Edit User", edit_user_path(@user), :class => 'navbar-brand' %>
  <%= link_to "Deactivate Account", user_path(@user), :class => 'navbar-brand',
                                                      :data =>
                                                      {:confirm => "You sure?",
                                                       :method => "delete"} %>
</nav>


<% @user.photos.each do |photo| %>
  <%= image_tag photo.image.url(:medium) %><br>
  <%= link_to "#{photo.name}", photo_path(photo) %>
<% end %>

<hr>
<h3>Add Photo</h3>
<%= form_for @photo, :url => photos_path, :html => { :multipart => true } do |form| %>
  <div class="form-group">
  <%= form.label :name %>
  <%= form.text_field :name %>
  </div>
  <%= form.file_field :image %>
  <%= form.submit(:class => "btn btn-default", :value => "Add Photo") %>
<% end %>



